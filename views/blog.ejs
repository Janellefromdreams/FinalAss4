<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        
        .carousel {
            margin-top: 20px;
        }
        footer {
            text-align: center;
            margin-top: 100px;
            background-color: #f8f9fa;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        .container {
            margin-bottom: 100px;
        }
    </style>
    <script>
        function redirectToApi1() {
            window.location.href = "/api1";
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Blog</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/api1">API 1</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/api2">API 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/api3">API 3</a>
                </li>
            </ul>
        </div>
    </nav>

    

    <div class="container mt-4">
		<h2>Add Carousel</h2>
        <form action="/addCarousel/<%= carousels._id %>" method="post">
        <div class="form-group">
            <label for="url1">URL 1:</label>
            <input type="text" class="form-control" id="url1" name="url1" required>
        </div>
        <div class="form-group">
            <label for="url2">URL 2:</label>
            <input type="text" class="form-control" id="url2" name="url2" required>
        </div>
        <div class="form-group">
            <label for="url3">URL 3:</label>
            <input type="text" class="form-control" id="url3" name="url3" required>
        </div>
        <div class="form-group">
            <label for="name">Carousel Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="description">Carousel Description:</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <% carousels.forEach(carousel => { %>
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title"><%= carousel.name %></h5>
                    <p class="card-text"><%= carousel.description %></p>
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <% carousel.urls.forEach((url, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <img src="<%= url %>" class="d-block w-100" alt="...">
                                </div>
                            <% }) %>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <a href="/editCarousel/<%= carousel._id %>" class="btn btn-primary">Edit</a>
                    <form action="/deleteCarousel/<%= carousel._id %>" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
        <% }) %>
</div>


	

    <footer>
        <p>Author: Zhanel Zhanibekova. IT-2208</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>